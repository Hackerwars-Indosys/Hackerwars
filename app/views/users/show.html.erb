  <div class="user-content-wrapper">
    <div class="user-content-title">
      <p>現在の仕事</p>
    </div>
    <div class="user-content-detail">
      <%= @user.job1 %>
    </div>
  </div>

  <div class="user-content-wrapper">
    <div class="user-content-title">
      <p>職歴</p>
    </div>
    <div class="user-content-detail">
      <%= @user.job1 %>
    </div>
    <div class="user-content-detail">
      <%= @user.job2 %>
    </div>
    <div class="user-content-detail">
      <%= @user.job2 %>
    </div>
  </div>
  <div class="user-content-wrapper">
    <div class="user-content-title">
      <strong>学歴</strong>
    </div>
    <div class="user-content-detail">
      <%= @user.university %>
    </div>
  </div>

  <%= link_to 'Back', users_path %>
</div>
